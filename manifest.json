{
    "manifest_version": 2,
    "name": "Wikired",
    "description": "Pomocnik Wiki Redaktora",
    "version": "0.3",
    "permissions": [
        "activeTab",
        "clipboardWrite"
    ],
    "background": {
        "page": "pages/background/background.html"
    },
    "content_scripts": [
        {
            "matches": [ "*://*/*" ],
            "js": [ "scripts/content.js" ]
        }
    ],
    "browser_action": {
        "default_icon": "images/icon.ico",
        "default_title": "Quote",
        "browser_style": true
    },
    "icons": {
        "48": "images/icon.ico"
    }
}
