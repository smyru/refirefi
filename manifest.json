{
    "manifest_version": 2,
    "name": "RefiRefi",
    "description": "Pomocnik redaktora Wikipedii",
    "version": "0.4",
    "permissions": [
        "activeTab",
        "clipboardWrite"
    ],
    "background": {
        "page": "pages/background/background.html"
    },
    "content_scripts": [
        {
            "matches": [ "*://*/*" ],
            "js": [ "scripts/content.js" ]
        }
    ],
    "browser_action": {
        "default_icon": "images/icon.svg",
        "default_title": "Cytuj stronÄ™",
        "browser_style": true
    },
    "icons": {
        "96": "images/icon.svg"
    }
}
